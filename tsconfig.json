{
  "compilerOptions": {
    "target": "esnext", // Use "esnext" to leverage modern features
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ], // Include latest JS features
    "allowJs": true, // Allow JavaScript files to be compiled
    "skipLibCheck": true, // Skip type checking of declaration files
    "strict": true, // Enable all strict type-checking options
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in filenames
    "noEmit": false, // Set to false to enable output
    "esModuleInterop": true, // Enable interoperability between CommonJS and ES Modules
    "module": "esnext", // Use ESNext modules
    "moduleResolution": "node", // Resolve modules in Node.js style
    "resolveJsonModule": true, // Allow importing JSON modules
    "isolatedModules": true, // Ensure all files can be transpiled independently
    "jsx": "preserve", // Preserve JSX syntax
    "incremental": true, // Enable incremental compilation
    "outDir": "./dist", // Output directory for compiled JavaScript files
    "rootDir": "./", // Root directory of your TypeScript files
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "src/**/*",
    ".next/types/**/*.ts"
  ], // Include src folder
  "exclude": [
    "node_modules"
  ]
}
